<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Inter', sans-serif;
            background: #0f0f23;
            color: #fff;
            min-height: 100vh;
        }
        .header {
            background: rgba(255,255,255,0.05);
            padding: 16px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .header h1 { font-size: 1.25rem; }
        .header-links a {
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            margin-left: 20px;
            font-size: 0.9rem;
        }
        .header-links a:hover { color: #fff; }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 24px;
        }
        .card {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
        }
        .card h2 {
            font-size: 1.25rem;
            margin-bottom: 20px;
            padding-bottom: 12px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 16px;
        }
        .form-group { margin-bottom: 16px; }
        .form-group.full { grid-column: 1 / -1; }
        label {
            display: block;
            color: rgba(255,255,255,0.7);
            margin-bottom: 6px;
            font-size: 0.875rem;
        }
        input, textarea {
            width: 100%;
            padding: 12px;
            background: rgba(255,255,255,0.1);
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 8px;
            color: #fff;
            font-size: 0.9rem;
        }
        input:focus, textarea:focus {
            outline: none;
            border-color: #6366f1;
        }
        textarea { min-height: 120px; resize: vertical; }
        .btn {
            padding: 10px 20px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border: none;
            border-radius: 8px;
            color: #fff;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .btn:hover { transform: translateY(-1px); }
        .btn-danger {
            background: linear-gradient(135deg, #ef4444, #dc2626);
        }
        .btn-small { padding: 6px 12px; font-size: 0.8rem; }
        .items-list {
            display: grid;
            gap: 12px;
            margin-top: 16px;
        }
        .item {
            background: rgba(255,255,255,0.05);
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .item-title { font-weight: 500; }
        .item-actions { display: flex; gap: 8px; }
        @media (max-width: 768px) {
            .form-grid { grid-template-columns: 1fr; }
            .header { flex-direction: column; gap: 12px; text-align: center; }
        }
    </style>
</head>
<body>
    <header class="header">
        <h1>Portfolio Admin</h1>
        <div class="header-links">
            <a href="/" target="_blank">View Site</a>
            <a href="/admin/logout">Logout</a>
        </div>
    </header>

    <div class="container">
        <div class="card">
            <h2>Profile Information</h2>
            <form method="POST" action="/admin/profile">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" value="<%= profile ? profile.name : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label>Tagline</label>
                        <input type="text" name="tagline" value="<%= profile ? profile.tagline : '' %>">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" value="<%= profile ? profile.email : '' %>">
                    </div>
                    <div class="form-group full">
                        <label>Bio</label>
                        <textarea name="bio"><%= profile ? profile.bio : '' %></textarea>
                    </div>
                </div>
                <button type="submit" class="btn">Save Profile</button>
            </form>
        </div>

        <div class="card">
            <h2>Projects</h2>
            <form method="POST" action="/admin/project">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" required>
                    </div>
                    <div class="form-group">
                        <label>Technologies (comma-separated)</label>
                        <input type="text" name="technologies">
                    </div>
                    <div class="form-group">
                        <label>Live URL</label>
                        <input type="url" name="live_url">
                    </div>
                    <div class="form-group">
                        <label>GitHub URL</label>
                        <input type="url" name="github_url">
                    </div>
                    <div class="form-group full">
                        <label>Description</label>
                        <textarea name="description"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn">Add Project</button>
            </form>
            <div class="items-list">
                <% projects.forEach(function(project) { %>
                    <div class="item">
                        <span class="item-title"><%= project.title %></span>
                        <div class="item-actions">
                            <form method="POST" action="/admin/project/delete/<%= project.id %>" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-small">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="card">
            <h2>Skill Categories</h2>
            <form method="POST" action="/admin/skill-category">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input type="text" name="name" placeholder="e.g., Frontend Development" required>
                    </div>
                </div>
                <button type="submit" class="btn">Add Category</button>
            </form>
            <div class="items-list">
                <% skillCategories.forEach(function(cat) { %>
                    <div class="item">
                        <span class="item-title"><%= cat.name %></span>
                        <div class="item-actions">
                            <form method="POST" action="/admin/skill-category/delete/<%= cat.id %>" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-small">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="card">
            <h2>Skills</h2>
            <form method="POST" action="/admin/skill">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Skill Name</label>
                        <input type="text" name="name" placeholder="e.g., React" required>
                    </div>
                    <div class="form-group">
                        <label>Icon (Font Awesome class)</label>
                        <input type="text" name="icon" placeholder="e.g., fab fa-react">
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select name="category_id" style="width:100%;padding:12px;background:rgba(255,255,255,0.1);border:1px solid rgba(255,255,255,0.2);border-radius:8px;color:#fff;">
                            <% skillCategories.forEach(function(cat) { %>
                                <option value="<%= cat.id %>"><%= cat.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn">Add Skill</button>
            </form>
            <div class="items-list">
                <% skills.forEach(function(skill) { %>
                    <div class="item">
                        <span class="item-title"><i class="<%= skill.icon %>"></i> <%= skill.name %></span>
                        <div class="item-actions">
                            <form method="POST" action="/admin/skill/delete/<%= skill.id %>" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-small">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="card">
            <h2>Social Links</h2>
            <form method="POST" action="/admin/social">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Platform</label>
                        <input type="text" name="platform" placeholder="e.g., GitHub" required>
                    </div>
                    <div class="form-group">
                        <label>URL</label>
                        <input type="url" name="url" required>
                    </div>
                    <div class="form-group">
                        <label>Icon (Font Awesome class)</label>
                        <input type="text" name="icon" placeholder="e.g., fab fa-github">
                    </div>
                </div>
                <button type="submit" class="btn">Add Social Link</button>
            </form>
            <div class="items-list">
                <% socialLinks.forEach(function(link) { %>
                    <div class="item">
                        <span class="item-title"><%= link.platform %></span>
                        <div class="item-actions">
                            <form method="POST" action="/admin/social/delete/<%= link.id %>" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-small">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>
